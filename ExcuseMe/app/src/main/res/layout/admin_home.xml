<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="View New Requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/view_nr" />

    <Button
        android:text="Delete Classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/dc"
        android:layout_below="@+id/view_nr"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Manage Lectures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/manage_l"
        android:layout_below="@+id/dc"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/ALO"
        android:layout_below="@+id/manage_l"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
