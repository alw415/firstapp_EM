<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Question"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/EnterQ"
        android:layout_toLeftOf="@+id/submitQ"
        android:layout_toStartOf="@+id/submitQ" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/submitQ" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_above="@+id/EnterQ"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns = "1">

            <TableRow android:layout_height="109dp"
                android:layout_width="match_parent">

                <TextView
                    android:text="Question 1"
                    android:layout_width="270dp"
                    android:id= "@+id/question1"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="109dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageButton" />
            </TableRow>
            <TableRow android:layout_height="109dp"
                android:layout_width="match_parent">

                <TextView
                    android:text="Question 2"
                    android:layout_width="270dp"
                    android:id= "@+id/question2"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="109dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageButton2" />
            </TableRow>
            <TableRow android:layout_height="109dp"
                android:layout_width="match_parent">

                <TextView
                    android:text="Question 3"
                    android:layout_width="270dp"
                    android:id= "@+id/question3"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="109dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageButton3" />
            </TableRow>
            <TableRow android:layout_height="109dp"
                android:layout_width="match_parent">

                <TextView
                    android:text="Question 4"
                    android:layout_width="270dp"
                    android:id= "@+id/question4"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="109dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageButton4" />
            </TableRow>
            <TableRow android:layout_height="109dp"
                android:layout_width="match_parent">

                <TextView
                    android:text="Question 5"
                    android:layout_width="270dp"
                    android:id= "@+id/question5"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="109dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageButton5" />
            </TableRow>
            <TableRow android:layout_height="109dp"
                android:layout_width="match_parent">

                <TextView
                    android:text="Question 6"
                    android:layout_width="270dp"
                    android:id= "@+id/question6"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="109dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    app:srcCompat="@android:drawable/star_big_on"
                    android:id="@+id/imageButton6" />
            </TableRow>
        </TableLayout>

    </ScrollView>

</RelativeLayout>
